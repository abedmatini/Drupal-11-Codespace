# Drupal 11 standard .gitignore

# Ignore configuration files that contain sensitive information.
/web/sites/*/settings.php
/web/sites/*/settings.local.php
/web/sites/*/services.yml
/web/sites/*/services.local.yml

# Ignore files generated by Drupal.
/web/sites/*/files
/web/sites/*/private
/web/sites/*/simpletest

# Ignore backup and temporary files.
*.bak
*.tmp
*.swp
*.swo
*~

# Ignore Composer vendor directory.
drupal_site/vendor/

# Ignore Drupal core directory.
drupal_site/web/core/

# Ignore contributed modules and themes.
drupal_site/web/modules/contrib/
drupal_site/web/themes/contrib/

# Ignore SQLite database files generated by Drupal.
drupal_site/web/drupal
drupal_site/web/drupal-shm
drupal_site/web/drupal-wal

# Ignore Composer lock file if you don't want to commit it.
#drupal_site/composer.lock

# Ignore node_modules if using frontend tools.
drupal_site/node_modules/

# Ignore IDE and OS files.
.idea/
.vscode/
.DS_Store
Thumbs.db

# Ignore PHPUnit test output.
/web/sites/simpletest/

# Ignore log files.
*.log

# Ignore environment files.
.env
.env.local

# Ignore other common files.
drupal_site/web/sites/default/files/
drupal_site/web/sites/default/private/
drupal_site/web/sites/default/files-*/
drupal_site/web/sites/default/files_tmp/
drupal_site/web/sites/default/files-translations/
drupal_site/web/sites/default/files/styles/
drupal_site/web/sites/default/files/js/
drupal_site/web/sites/default/files/css/
drupal_site/web/sites/default/files/php/
drupal_site/web/sites/default/files/tmp/
drupal_site/web/sites/default/files/sync/
drupal_site/web/sites/default/files/config_*/
drupal_site/web/sites/default/files/languages/
drupal_site/web/sites/default/files/pictures/
drupal_site/web/sites/default/files/media/
drupal_site/web/sites/default/files/twig/
drupal_site/web/sites/default/files/php/twig/
drupal_site/web/sites/default/files/php/twig/*
